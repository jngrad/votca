<cg>
 <!-- example for a non-bonded interaction entry -->
 <non-bonded>
  <!-- name of the interaction -->
  <name>UR-UR</name>
  <!-- types involved in this interaction -->
  <type1>UR</type1>
  <type2>UR</type2>
  <!-- dimension + grid spacing of tables for calculations -->
  <min>0</min>
  <max>1.4</max>
  <step>0.01</step>
  <inverse>
   <!-- target distribution (rdf), just give gromacs rdf.xvg -->
   <target>UR-UR.dist.tgt</target>
   <!-- update cycles -->
   <do_potential>1</do_potential>
   <!-- additional post processing of dU before added to potential -->
   <post_update>scale smooth</post_update>
   <post_update_options>
          <scale>1</scale> <!--Scale the potential before updating it -->
   	<smooth>
        	<iterations>2</iterations>
   	</smooth>
   </post_update_options>
   <!-- additional post processing of U after dU added to potential -->
   <post_add></post_add>
   <!-- name of the table for gromacs run -->
   <gromacs>
    <table>table_UR_UR.xvg</table>
   </gromacs>
  </inverse>
 </non-bonded>
   
